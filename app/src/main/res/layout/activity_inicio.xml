<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8F6E2">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Denuncia Ciudadana"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Botones del menú -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="2"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btnInicio"
                android:text="Inicio"
                android:backgroundTint="#87A8D3"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnReportar"
                android:text="Reportar"
                android:backgroundTint="#3CB6A1"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnChat"
                android:text="Chat"
                android:backgroundTint="#87A8D3"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnMisReportes"
                android:text="Mis Reportes"
                android:backgroundTint="#87A8D3"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnPerfil"
                android:text="Perfil"
                android:backgroundTint="#87A8D3"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnConfiguracion"
                android:text="Configuración"
                android:backgroundTint="#87A8D3"
                android:textColor="#FFFFFF" />
        </GridLayout>

    </LinearLayout>
</ScrollView>